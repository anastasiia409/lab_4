@model IEnumerable<Project>
@{
    ViewData["Title"] = "Index";
}

@if(TempData["success"] != null)
{
    <h1>@TempData["success"]</h1>
}

<h1>projects</h1>
<a asp-controller="Project" asp-action="Create" class="btn btn-primary">Add project</a>
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Name
            </th>
            <th>
                DateOfStart
            </th>
            <th>
                DateOfEnd
            </th>
            <th>
                Description
            </th>
            <th>

            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var project in Model)
        {
            <tr>
                <td>
                    @project.Id
                </td>
                <td>
                    @project.Name
                </td>
                <td>
                    @project.DateOfStart
                </td>
                <td>
                    @project.DateOfEnd
                </td>
                <td>
                    @project.Description
                </td>
                <td>
                    <a asp-controller="Project" asp-action="Edit" asp-route-id="@project.Id" class="btn btn-warning">Edit project</a>
                </td>
                <td>
                    <a asp-controller="Project" asp-action="Delete" asp-route-id="@project.Id" class="btn btn-danger">Delete project</a>
                </td>
            </tr>
        }
    </tbody>
</table>