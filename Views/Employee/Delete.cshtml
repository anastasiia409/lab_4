@model Employee
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete employee</h1>

<form method="post" asp-action="DeletePOST">
	<input asp-for="Id" hidden />
	<div class"mb-3">
		<label>Employee name</label>
		<input asp-for="Name" />
		<span asp-validation-for="Name"></span>
	</div>
	<div class"mb-3">
		<label>Employee surname</label>
		<input asp-for="Surname" />
		<span asp-validation-for="Surname"></span>
	</div>
	<div class"mb-3">
		<label>Address</label>
		<input asp-for="Address" min=1 />
		<span asp-validation-for="Address"></span>
	</div>
	<div class"mb-3">
		<label>Description of employee</label>
		<input asp-for="Description" min = 1/>
		<span asp-validation-for="Description"></span>
	</div>
	<button type="submit">Delete employee</button>
	<button><a asp-controller="Employee" asp-action="Index">Return to all employee</a></button>

</form>
